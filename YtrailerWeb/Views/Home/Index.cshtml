    <div class="col-md-4">
        <h2>AJAX EX</h2>
    @using(Html.BeginForm())
    {
         @Html.TextBox("txtAmt", 0)
        <button id="btnDoubleValue">Double it</button>
        <span id="lblMessage" style="color:red"> </span>
        
        
        
    }
    @section Scripts
    {
         <script type="text/javascript">
             $(function () {
                 $('#btnDoubleValue').on("click", function (e) {
                     e.preventDefault();

                     $.ajax({
                         type: "POST",
                         url: '@Url.Action("DoubleValue")',
                         data: { 'Value': $('#txtAmt').val() },
                         datatype: "json",
                         cache: false
                     }).success(function (data) {
                         $('#txtAmt').val(data.DoubleValue);
                     }).error(function (xhr,ajaxOpts,e) {
                         $('#lblMessage').html('there was an error');
                     });
                 })
             });
         </script>
    } 
